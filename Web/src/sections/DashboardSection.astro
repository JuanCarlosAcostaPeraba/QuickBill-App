---
import MoneyChart from '@/components/MoneyChart.astro'
---

<section id="Dashboard">
	<div class="flex items-center justify-between mb-6">
		<h1 class="text-3xl font-bold text-gray-800 dark:text-white">Dashboard</h1>
		<div class="flex gap-4">
			<div
				class="flex items-center gap-2 bg-green-50 border border-green-200 rounded-lg px-4 py-2 shadow-sm">
				<span class="font-medium text-green-700">Paid:</span>
				<span
					id="total-paid"
					class="ml-1 font-bold text-green-800 value-fixed-width">
				</span>
			</div>
			<div
				class="flex items-center gap-2 bg-yellow-50 border border-yellow-200 rounded-lg px-4 py-2 shadow-sm">
				<span class="font-medium text-yellow-700">Pending:</span>
				<span
					id="total-pending"
					class="ml-1 font-bold text-yellow-800 value-fixed-width">
				</span>
			</div>
		</div>
	</div>
	<MoneyChart />
</section>

<style>
	.value-fixed-width {
		min-width: 50px;
		display: inline-block;
		text-align: right;
	}
</style>
