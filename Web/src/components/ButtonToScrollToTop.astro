<button
	id="scrollToTopBtn"
	class="fixed bottom-4 right-4 bg-blue-500 text-white p-3 rounded-full shadow-lg hover:bg-blue-600 transition-colors opacity-0 pointer-events-none transition-opacity duration-300 z-50"
	onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
	aria-label="Scroll to top">
	<svg
		width="24"
		height="24"
		viewBox="0 0 24 24"
		fill="none"
		stroke="currentColor"
		stroke-width="2"
		stroke-linecap="round"
		stroke-linejoin="round"
		class="w-6 h-6">
		<path d="M12 19V5"></path>
		<path d="M5 12l7-7 7 7"></path>
	</svg>
</button>
<script is:inline>
	window.addEventListener('scroll', () => {
		const btn = document.getElementById('scrollToTopBtn')
		if (!btn) return
		if (window.scrollY > 100) {
			btn.classList.add('visible')
		} else {
			btn.classList.remove('visible')
		}
	})
</script>

<style>
	#scrollToTopBtn.visible {
		opacity: 1 !important;
		pointer-events: auto !important;
	}
</style>
